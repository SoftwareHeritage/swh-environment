#!/bin/bash

abspath=no

if [ "$1" == "-a" -o "$1" == "--absolute" ] ; then
    abspath=yes
fi

mr list \
    | grep '^mr list:' | grep -v '^mr list: finished' \
    | awk '{print $3}' \
    | while read repo_abspath ; do
        if [ "$abspath" == "no" ] ; then
            basename $repo_abspath
        else
	    echo $repo_abspath
	fi
      done
